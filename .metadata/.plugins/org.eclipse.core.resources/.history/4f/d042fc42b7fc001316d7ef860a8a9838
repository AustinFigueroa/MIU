  value: "abc@yahoo.com",
  font: {fontSize: 14, fontFamily: "Arial"},
  color: '#336699',
  bottom: 185 , 
  left: 100,
  width: 200,
  height: 35
});
var passwordview = Ti.UI.createLabel({
  text:"Password",
